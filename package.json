{
  "name": "svelte-number-format",
  "version": "1.0.0",
  "description": "Svelte component to format number in an input or as a text.",
  "svelte": "src/index.js",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "rollup -c",
    "prepublish:public": "npm run build",
    "publish:public": "npm publish --access public",
    "format": "prettier --write .",
    "lint": "npm run lint:es && npm run lint:ts",
    "lint:es": "eslint . --ext ts --ext tsx --ext js",
    "lint:ts": "tsc --noemit",
    "test:unit": "true",
    "validate": "svelte-check",
    "prepare": "husky install"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pitis/svelte-number-format.git"
  },
  "keywords": [
    "svelte-component",
    "svelte",
    "currency",
    "input",
    "number",
    "number-format",
    "mask"
  ],
  "author": "Pitis Radu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pitis/svelte-number-format/issues"
  },
  "homepage": "https://github.com/pitis/svelte-number-format#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint-config-prettier": "^8.3.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "rollup": "^2.63.0",
    "rollup-plugin-execute": "^1.1.1",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.21.0",
    "svelte": "^3.46.1",
    "svelte-check": "^1.0.60",
    "svelte-preprocess": "^4.10.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "svelte": "^3.4.1"
  }
}
